{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "@actions/*": ["./src/actions/*"],
      "@core/*": ["./src/core/*"],
      "@assets/*": ["./src/assets/*"],
      "@log/*": ["./src/actions/log/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}